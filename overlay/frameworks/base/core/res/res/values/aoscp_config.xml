<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Is the battery LED intrusive? Used to decide if there should be a battery led switch -->
    <bool name="config_intrusiveBatteryLed">true</bool>

    <!-- Hardware 'face' keys present on the device, stored as a bit field.
         This integer should equal the sum of the corresponding value for each
         of the following keys present:
             1 - Home
             2 - Back
             4 - Menu
             8 - Assistant (search)
            16 - App switch
            32 - Camera
            64 - Volume rocker
         For example, a device with Home, Back and Menu keys would set this
         config to 7. -->
    <integer name="config_deviceHardwareKeys">64</integer>

    <!-- Does the device supports fast charging -->
    <bool name="config_FastChargingLedSupported">true</bool>

    <!-- Keycodes of gestures. If the gesture is not supported set it to 0. -->
    <integer name="config_doubleTapKeyCode">143</integer>

    <integer name="config_drawOKeyCode">250</integer>

    <integer name="config_twoFingerSwipeKeyCode">251</integer>

    <integer name="config_drawVKeyCode">252</integer>

    <integer name="config_drawArrowLeftKeyCode">253</integer>

    <integer name="config_drawArrowRightKeyCode">254</integer>

    <integer name="config_drawInverseVKeyCode">255</integer>

    <integer name="config_oneFingerSwipeRightKeyCode">63</integer>

    <integer name="config_oneFingerSwipeLeftKeyCode">64</integer>

    <integer name="config_oneFingerSwipeDownKeyCode">65</integer>

    <integer name="config_oneFingerSwipeUpKeyCode">66</integer>

    <!-- Default settings for gestures
            0 - Disabled
            1 - Wake device
            2 - Toggle flashlight
            3 - Toggle airplane mode
            4 - Play/Pause music
            5 - Next music
            6 - Previous music
            7 - Open camera
            8 - Open dialer -->
    <integer name="config_doubleTapDefault">1</integer>

    <!-- Whether to intercept inputs on screen off. -->
    <bool name="config_enableKeyHandler">true</bool>

</resources>
